{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*\\.(?:js|mjs|css|png|jpg|jpeg|gif|svg|ico|webp|json|map))$",
            "dest": "/$1"
        },
        {
            "src": "/assets/(.*)",
            "headers": { "cache-control": "public, max-age=31536000, immutable" },
            "dest": "/assets/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/favicon.ico"
        },
        {
            "src": "/logo2.png",
            "dest": "/logo2.png"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}